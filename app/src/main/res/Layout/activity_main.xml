<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nurse"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:src="@drawable/nurse" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:text="@string/welcome"
        android:textColor="@color/alltext"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:text="@string/slogan"
        android:textColor="@color/alltext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="8dp"
        android:text="Come see us.."
        android:textColor="@color/alltext" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="0.5"
            android:paddingLeft="8dp"
            android:src="@drawable/ping" />
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.5" android:autoLink="map" android:paddingLeft="16dp" android:paddingTop="3dp" android:text="@string/address" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="0.5"
            android:paddingLeft="8dp"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:autoLink="phone"
            android:paddingLeft="16dp"
            android:paddingTop="3dp"
            android:text="@string/phoneNumber" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="0.5"
            android:paddingLeft="8dp"
            android:src="@drawable/website" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:autoLink="web"
            android:paddingLeft="16dp"
            android:paddingTop="3dp"
            android:text="@string/website" />

    </LinearLayout>

</LinearLayout>
